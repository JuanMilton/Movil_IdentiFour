<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onIngresar"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onGuardar"
        android:text="Guardar" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioGroup1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Configuracion de Notificaciones"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/settings_ch_not_veh_salga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Notificarme cuando mi vehiculo salga" />

        <CheckBox
            android:id="@+id/settings_ch_not_veh_ing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificarme cuando mi vehiculo ingrese" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/checkBox2"
            android:text="Configuracion de Visita"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView01" >

            <RadioButton
                android:id="@+id/settings_rb_preguntar_siempre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Preguntarme Siempre" />

            <RadioButton
                android:id="@+id/settings_rb_dejar_entrar_siempre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dejar entrar Siempre" />

            <RadioButton
                android:id="@+id/settings_rb_nunca_dejar_entrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nunca dejar Ingresar" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>