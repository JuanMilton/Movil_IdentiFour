        <activity android:name="firstone.identi_four.movil.presentacion.NotificacionActivity" android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar"></activity>
        <activity android:name="firstone.identi_four.movil.presentacion.AlarmaLlegoActivity" android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar"></activity>
