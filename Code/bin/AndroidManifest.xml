        <activity android:name="firstone.identi_four.movil.presentacion.HistorialActivity" android:screenOrientation="landscape"></activity>
        <activity android:name="firstone.identi_four.movil.presentacion.AlarmaActivity"></activity>
        <activity android:name="firstone.identi_four.movil.presentacion.SettingsActivity" android:screenOrientation="portrait"></activity>
